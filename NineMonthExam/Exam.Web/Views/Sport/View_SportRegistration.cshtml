@model Exam.Domain.Sports.Spot
@{
    ViewData["Title"] = "ViewClient";
    Layout = null;
    var ResultData = ViewBag.Result as List<Exam.Domain.Sports.Spot>;
}
@*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<script src="~/js/jquery-3.3.1.min.js"></script>
<link href="~/Datatable/CSS/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Datatable/CSS/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/js/common.js"></script>
<script src="~/Datatable/JS/dataTables.buttons.js"></script>
<script src="~/Datatable/JS/jquery.dataTables.min.js"></script>
